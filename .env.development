# Development Environment Configuration
VITE_APP_ENV=development
VITE_APP_NAME=Nazsu Water Store - Dev
VITE_APP_VERSION=1.0.0-dev

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Database Configuration
VITE_DB_HOST=localhost
VITE_DB_PORT=27017
VITE_DB_NAME=nazsu_dev

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_HOT_RELOAD=true

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false
VITE_BUILD_ANALYZE=false

# Security
VITE_ENABLE_HTTPS=false
VITE_CORS_ORIGIN=http://localhost:3000

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-dev-google-client-id
VITE_GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Payment Gateway (Test)
VITE_PAYMENT_GATEWAY_URL=https://sandbox-payment.example.com
VITE_PAYMENT_PUBLIC_KEY=test_pk_123456789

# Logging
VITE_LOG_LEVEL=debug
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_FILE=false
