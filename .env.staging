# Staging Environment Configuration
VITE_APP_ENV=staging
VITE_APP_NAME=Nazsu Water Store - Staging
VITE_APP_VERSION=1.0.0-staging

# API Configuration
VITE_API_BASE_URL=https://staging-api.nazsu.com/api
VITE_API_TIMEOUT=15000
VITE_API_RETRY_ATTEMPTS=3

# Database Configuration
VITE_DB_HOST=staging-db.nazsu.com
VITE_DB_PORT=27017
VITE_DB_NAME=nazsu_staging

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_HOT_RELOAD=false

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_ANALYZE=true

# Security
VITE_ENABLE_HTTPS=true
VITE_CORS_ORIGIN=https://staging.nazsu.com

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-staging-google-client-id
VITE_GOOGLE_REDIRECT_URI=https://staging.nazsu.com/auth/callback

# Payment Gateway (Test)
VITE_PAYMENT_GATEWAY_URL=https://staging-payment.example.com
VITE_PAYMENT_PUBLIC_KEY=staging_pk_123456789

# Logging
VITE_LOG_LEVEL=info
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_FILE=true

# CDN Configuration
VITE_CDN_URL=https://cdn-staging.nazsu.com
VITE_ASSETS_URL=https://assets-staging.nazsu.com

# Performance
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=networkFirst
